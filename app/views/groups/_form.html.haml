= form_for group do |f|
	- if group.errors.any?
		.chat-group-form__errors
			%h2= "#{group.errors.count}件のエラーが発生しました。"
			%ul
			- group.errors.full_messages.each do |msg|
				%li="#{msg}"
	.chat-group-form__field.clearfix
		.chat-group-form__field--left
			= f.label :name, class: "chat-group-form__label", value: "グループ名"
		.chat-group-form__field--right
			= f.text_field :name, class: "chat-group-form__input", placeholder: "グループ名を入力してください"
	.chat-group-form__field.clearfix
		.chat-group-form__field--left
			= f.label :text, class: "chat-group-form__label", value: "チャットメンバーを追加"
		.chat-group-form__field--right
			.chat-group-form__search.clearfix
				= f.text_field :name, class: "chat-group-form__input", id: "user-search-field", placeholder: "追加したいユーザー名を入力してください"
			#user-search-result
	.chat-group-form__field.clearfix
		.chat-group-form__field--left
			= f.label :member, class: 'chat-group-form__label', value: "チャットメンバー"
		.chat-group-form__field--right
			= f.hidden_field :current_user, value: current_user.name, id: "current_user_name"
			= f.hidden_field :current_user, value: current_user.id, id: "current_user_id"
			#chat-group-users
				.chat-group-user.clearfix
					= f.hidden_field :user_id, name: "group[user_ids][]", value: current_user.id
					%p.chat-group-user__name
						= current_user.name
				- group.delete(current_user).each do |user|
					.chat-group-user.clearfix
						.chat-group-user__name
						= user.name
						= f.hidden_field :user_id, name: "group[user_ids][]", value: user.id
						%a.user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn 削除
	.chat-group-form__field.clearfix
		.chat-group-form__field--left
		.chat-group-form__field--right
			= f.submit "Save", class: "chat-group-form__action-btn"
